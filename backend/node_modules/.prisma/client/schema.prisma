generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(OFICINA)
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  REGULADOR
  SEGURADORA
  OFICINA
}
